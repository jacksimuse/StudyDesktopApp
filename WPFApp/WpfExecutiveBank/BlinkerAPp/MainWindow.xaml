<Window x:Class="BlinkerAPp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlinkerAPp"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="450" Loaded="Window_Loaded_1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>

        <Button x:Name="BtnStartBlink" Content="" Click="BtnStartBlink_Click" Background="Red" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnStopBlink" Content="" Grid.Column="2" Click="BtnStopBlink_Click" Background="Green"/>
        <Label Content="Start Blinking" HorizontalAlignment="Left" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Label Content="Stop Blinking" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="1" />

    </Grid>
</Window>
