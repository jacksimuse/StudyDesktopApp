<Window x:Class="SnakeBiteGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeBiteGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Stretch="Fill" Source="main.png" />
        <TextBlock Text="Snake Bite Game" 
                   FontSize="30" FontWeight="ExtraBold" Foreground="Yellow"
                   HorizontalAlignment="Center" Margin="40" />
        <Button x:Name="BtnPlay" Content="Play" Width="200" Height="50" Margin="160, 315, 432, 54" FontSize="20" Click="BtnPlay_Click"/>
        <Button x:Name="BtnExit" Content="Exit" Width="200" Height="50" Margin="461,315,131,54" FontSize="20" Click="BtnExit_Click"/>
    </Grid>
</Window>
